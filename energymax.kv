#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<AppScreenManager>:
    transition: FadeTransition(clearcolor=(.8, .8, 1, 1))
    current: "login_screen"
    login_screen: _login_screen
    main_screen: _main_screen
    pay_screen: _pay_screen
    LoginScreen:
        id: _login_screen
        screen_manager: root
    MainScreen:
        id: _main_screen
        screen_manager: root
    PayScreen:
        id: _pay_screen
        screen_manager: root
    WheelScreen:
        screen_manager: root